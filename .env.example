# ============================================
# Environment Variables Template
# ============================================
# Copia este archivo a .env y configura tus valores

# Application
ENV=development
DEBUG=true
PORT=8000

# SMTP Email Configuration (para formulario de contacto)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu-email@gmail.com
# SMTP_PASSWORD=tu-app-password
# SMTP_FROM=tu-email@gmail.com
# SMTP_TO=tu-email@gmail.com

# Database (si usas PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/cvdb

# Redis (si usas caché)
# REDIS_URL=redis://localhost:6379/0

# SendGrid (alternativa a SMTP)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxx

# Railway (se configuran automáticamente)
# RAILWAY_STATIC_URL=
# RAILWAY_ENVIRONMENT=

# Security
# SECRET_KEY=tu-secret-key-super-segura-cambiar-en-produccion
# ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# Analytics (opcional)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
